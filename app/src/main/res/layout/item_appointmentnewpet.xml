<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:paddingRight="15dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dip" >

        <ImageView
            android:id="@+id/iv_item_appointmentnewpet_petimg"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_item_appointmentnewpet_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="TextView"
            android:textColor="@color/aD1494F"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tv_item_appointmentnewpet_price"
            android:layout_toRightOf="@+id/iv_item_appointmentnewpet_petimg"
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:paddingRight="10dip" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_petname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_servicelevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_yuanprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_xianprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="¥0"
                    android:textColor="@color/aD1494F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_appointmentnewpet_servicecard"
                    android:layout_width="80dip"
                    android:layout_height="14dip"
                    android:background="@drawable/tv_orange_selector"
                    android:gravity="center"
                    android:text="使用服务卡支付"
                    android:textColor="@color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/vw_item_appointmentnewpet"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/aDDDDDD" />

    <com.haotang.pet.view.MyGridView
        android:id="@+id/mgv_item_appointmentnewpet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:verticalSpacing="10dip" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_item_appointmentnewlevel_root"
        android:layout_width="match_parent"
        android:layout_height="65dip" >

        <View
            android:id="@+id/vw_item_appointmentnewlevel_right"
            android:layout_width="1dip"
            android:layout_height="35dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/aDDDDDD" />

        <View
            android:id="@+id/vw_item_appointmentnewlevel_bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_alignParentBottom="true"
            android:background="@color/aDDDDDD" />

        <View
            android:id="@+id/vw_item_appointmentnewlevel"
            android:layout_width="50dip"
            android:layout_height="4dip"
            android:layout_above="@id/vw_item_appointmentnewlevel_bottom"
            android:layout_centerHorizontal="true"
            android:background="@color/aD1494F"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_above="@id/vw_item_appointmentnewlevel"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="10dip"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_item_appointmentnewlevel_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rl_item_appointmentnewlevel"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginBottom="5dip"
                    android:layout_toRightOf="@id/tv_item_appointmentnewlevel_name" >

                    <ImageView
                        android:layout_width="11.5dip"
                        android:layout_height="11.5dip"
                        android:layout_centerInParent="true"
                        android:src="@drawable/appoint_wenhao_img" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_appointmentnewlevel_des"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginBottom="10dip"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/a666666"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
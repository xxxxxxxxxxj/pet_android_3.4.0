<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.haotang.pet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/item_order_peticon"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginRight="10dp"
            />
<!-- app:border_color="@color/red"
            app:border_width="0dp"  -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/layout_item_pet_price"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textview_item_petnickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宠物昵称"
                        android:singleLine="true"
                    	android:ellipsize="end"
                    	android:textSize="14sp"
                        android:textColor="@color/a333333" />

                    <TextView
                        android:id="@+id/textview_item_petkind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="测试宠物种类"
                        android:singleLine="true"
                    	android:ellipsize="end"
                    	android:textSize="14sp"
                        android:textColor="@color/a666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textview_appointstyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="测试经典洗护"
                        android:textSize="11sp"
                        android:textColor="@color/a666666" />

                    <TextView
                        android:id="@+id/textview_appoinstyle_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥135"
                        android:textColor="@color/a999999" 
                        android:textSize="11sp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/textview_apponitstyle_last_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0"
                        android:textColor="@color/aD1494F" 
                        android:textSize="11sp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:id="@+id/textview_apponitstyle_is_used_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_service_apponit_ok"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:layout_marginLeft="5dp"
                        android:text="使用服务卡支付"
                        android:textColor="@color/white"
                        android:textSize="8sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textview_signle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试单项"
                    android:textSize="11sp"
                    android:textColor="@color/a666666" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_item_pet_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="bottom" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/aD1494F"
                    android:layout_marginRight="2dp"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textview_item_pet_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=" "
                    android:textColor="@color/aD1494F"
                    android:textStyle="bold"
                    android:textSize="18sp" 
                    android:layout_marginRight="15dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
	<View 
	    android:id="@+id/view_bottom_line"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/af8f8f8"/>
</LinearLayout>